{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/localhost:5000/(.*)",
      "dest": "server/index.js"
    },
    {"src": "/api/(.*)",
      "dest": "server/index.js"},
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "build": {
    "command": "npm install --force && npm run build"
  },
  "outputDirectory": "frontend/build"
}
