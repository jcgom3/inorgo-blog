{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL"
  },
  "devCommand": "npm run start",
  "buildCommand": "npm run build",
  "installCommand": "npm install"
}
