{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ],
  "build": {
    "command": "npm install --legacy-peer-deps && npm run build"
  },
  "nodeVersion": "16.x"
}
